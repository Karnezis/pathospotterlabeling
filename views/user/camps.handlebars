<div class="card mt-3">
    <div class="row">
        <div class="col">
            <h3 class="mt-3">&nbsp;&nbsp;&nbsp;Login</h3>
            <div class="card-body">
                <form action="/pathospotterlabeling/user/login" method="post">
                    <label for="email">E-mail:</label>
                    <input type="email" name="email" id="email" class="form-control" required>
                    <label for="pswrd">Password:</label>
                    <input type="password" name="pswrd" id="pswrd" class="form-control" required>
                    <hr>
                    <button type="input" class="btn"
                        style="background-color: #011627; border-color: #011627; color: #FDFFFC;">Login</button>
                </form>
            </div>
        </div>
        <div class="col">
            <h3 class="mt-3">&nbsp;&nbsp;&nbsp;System Registration Form</h3>
            <div class="card-body">
                <form action="/pathospotterlabeling/user/signup" method="post">
                    <label for="name">Name:</label>
                    <input type="text" name="name" id="name" class="form-control" required>
                    <label for="email">E-mail:</label>
                    <input type="email" name="email" id="email" class="form-control" required>
                    <label for="institution">Institution:</label>
                    <input type="text" name="institution" id="institution" class="form-control" required>
                    <label for="pswrd">Password:</label>
                    <input type="password" name="pswrd" id="pswrd" class="form-control" minlength="8" required>
                    <small id="passwordHelpBlock" class="form-text text-muted">Your password must have at least 8 characters.</small>
                    <label for="pswrdcheck">Repeat the password:</label>
                    <input type="password" name="pswrdcheck" id="pswrdcheck" class="form-control" minlength="8"
                        required>
                    <small id="passwordHelpBlock" class="form-text text-muted">This field must contain exactly the same text as the previous one.</small>
                    <hr>
                    <button type="input" class="btn"
                        style="background-color: #011627; border-color: #011627; color: #FDFFFC;">Submit Request</button>
                </form>
            </div>
        </div>
    </div>
</div>